<RelativeLayout
    style="@style/MatchParent.AppBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/barcode"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/big_text_size" android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
        <TextView
                    android:id="@+id/barcodeScannerStatus"
                    android:layout_margin="10dp"
                    android:layout_alignParentBottom="true"
                    android:text="State of bluetooth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loading_icon"
                    android:src="@drawable/loading"
                    android:visibility="visible"
                    android:cropToPadding="false" android:baselineAlignBottom="false"
                    android:adjustViewBounds="false" android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="false" android:layout_alignTop="@+id/barcodeScannerStatus"
                    />
    </LinearLayout>

</RelativeLayout>
