<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent.AppBackground">

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/scanner_connect_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Searching for Scanner.."
        android:textSize="16sp"
        android:layout_margin="10sp"
        />

    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!-- correct packages -->
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERIFIED"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/correct_package_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="60sp"
                android:layout_margin="5sp"
                />

            <TextView
                android:id="@+id/correct_package_car_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAR 107"
                android:textSize="20sp"
                />

        </LinearLayout>

        <!-- incorrect packages -->
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/label_misplaced_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MISPLACED"
                android:textSize="20sp"
                android:textColor="#FFFF3300"
                />

            <TextView
                android:id="@+id/wrong_package_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="60sp"
                android:layout_margin="5sp"
                android:textColor="#FFFF0000"
                />

            <TextView
                android:id="@+id/wrong_package_car_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WRONG CAR"
                android:textSize="20sp"
                android:textColor="#FFFF3300"
                />

            <TextView
                android:id="@+id/label_tap_to_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAP TO DIMISS"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:textColor="#FFFF3300"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>