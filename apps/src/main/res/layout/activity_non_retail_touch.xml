<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="10">

    <TextView
        android:id="@+id/scan_content_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:text="Dummy Scan Result"
        />

    <TextView
        android:id="@+id/nrt_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FF00FF00"
        android:textSize="60sp"
        android:layout_weight="2" android:layout_gravity="bottom"
        android:gravity="center" android:textIsSelectable="false"/>

</LinearLayout>