<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/body"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="123dp"
        android:layout_height="186dp"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="false"
        android:alpha="1"
        android:src="@drawable/pulse_circle_filled"
        android:tint="#34a7ff"
        android:layout_alignParentStart="false"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignTop="@+id/imageView"/>

    <ImageView
    android:layout_width="123dp"
    android:layout_height="186dp"
    android:id="@+id/imageView"
    android:src="@drawable/augmate_logo"
    android:contentDescription="@string/augmate_logo"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="381dp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Standby"
    android:id="@+id/prompt_field"
    android:layout_marginBottom="44dp"
    android:textColor="#ff000000"
    android:layout_alignBottom="@+id/imageView"
    android:layout_centerHorizontal="true"
    android:textAlignment="center"
    android:layout_alignParentEnd="false"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Tap to begin speaking"
    android:id="@+id/results_field"
    android:textAlignment="center"
    android:height="100dp"
    android:layout_alignWithParentIfMissing="false"
    android:layout_marginTop="48dp"
    android:layout_alignTop="@+id/prompt_field"
    android:layout_centerHorizontal="true"
    android:layout_alignParentStart="false"
    android:lines="1"
    android:ellipsize="end"/>

    <com.augmate.sdk.voice.SliderView
    android:id="@+id/indeterm_slider"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:visibility="invisible"/>

</RelativeLayout>