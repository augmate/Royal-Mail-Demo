<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="BrightnessActivity" parent = "@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="MatchParent.AppBackground">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParent.LeftMargin">
        <item name="android:layout_marginStart">@dimen/card_margin</item>
    </style>

    <style name="MatchParent.RightMargin">
        <item name="android:layout_marginEnd">@dimen/card_margin</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent.EqualFill">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WrapContent.PrimaryTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="fontPath">fonts/GothamNarrow-Book.otf</item>
    </style>

    <style name="MatchParent.PrimaryTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="fontPath">fonts/GothamNarrow-Book.otf</item>
    </style>

    <style name="WrapContent.PrimaryTextView.LeftAligned">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="WrapContent.PrimaryTextView.RightAligned">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="WrapContent.SecondaryTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="fontPath">fonts/GothamNarrow-Thin.otf</item>
    </style>
    <style name="MatchParent.SecondaryTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="fontPath">fonts/GothamNarrow-Thin.otf</item>
    </style>
    <style name="WrapContent.SecondaryTextView.LeftAligned">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="WrapContent.SecondaryTextView.RightAligned">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="WrapContent.MultiTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontPath">fonts/GothamNarrow-Thin.otf</item>
    </style>

    <style name="MatchParent.MultiTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontPath">fonts/GothamNarrow-Thin.otf</item>
    </style>

</resources>
