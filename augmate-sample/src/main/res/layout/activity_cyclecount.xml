<ViewFlipper
    android:id="@+id/flipper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent.AppBackground">

    <!-- LET'S CYCLE COUNT -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/card_margin">

        <TextView
            android:id="@+id/lets_cycle_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/lets_cycle_count"
            android:textSize="34sp"/>
    </RelativeLayout>

    <!-- COUNT ITEMS PROMPT-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/card_margin">

        <TextView
            android:id="@+id/count_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/count_item_prompt"
            android:textSize="34sp"/>
    </RelativeLayout>

    <!-- TAP TO SCAN ID PAGE -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/card_margin">

        <TextView
            android:id="@+id/tap_to_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/tap_to_scanid"
            android:textSize="34sp"/>

    </RelativeLayout>
</ViewFlipper>
