<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent.AppBackground">

    <ViewFlipper
        android:id="@+id/flipper"
        style="@style/MatchParent"
        android:padding="@dimen/glass_card_margin">

        <!-- LET'S LOGIN PAGE -->
        <RelativeLayout
            style="@style/MatchParent"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/lets_login"
                style="@style/WrapContent.SecondaryTextView.LeftAligned"
                android:text="@string/lets_login"/>
        </RelativeLayout>

        <!-- TAP TO SCAN ID PAGE -->
        <RelativeLayout
            style="@style/MatchParent"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tap_to_scan"
                style="@style/WrapContent.SecondaryTextView.RightAligned"
                android:text="@string/tap_to_scan_badge"/>
        </RelativeLayout>
    </ViewFlipper>

    <View
        android:layout_width="8dp"
        android:layout_height="12dp"
        android:background="@color/white"
        android:id="@+id/touch"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>