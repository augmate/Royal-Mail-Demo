<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/flipper"
        style="@style/MatchParent.AppBackground">

        <!-- LET'S LOGIN PAGE -->
        <RelativeLayout
            style="@style/MatchParent.LeftMargin"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/lets_login"
                style="@style/WrapContent.DefaultTextView.LeftAligned"
                android:layout_centerVertical="true"
                android:text="@string/lets_login"/>
        </RelativeLayout>

        <!-- TAP TO SCAN ID PAGE -->
        <RelativeLayout
            style="@style/MatchParent.RightMargin"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tap_to_scan"
                style="@style/WrapContent.DefaultTextView.RightAligned"
                android:layout_centerVertical="true"
                android:text="@string/tap_to_scan_badge"/>
        </RelativeLayout>
    </ViewFlipper>

    <View
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:background="@color/white"
        android:id="@+id/touch"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>